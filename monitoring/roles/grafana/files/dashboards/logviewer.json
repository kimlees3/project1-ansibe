{
  "uid": "logviewer-main",
  "title": "Log Viewer (All Servers)",
  "tags": [
    "logs",
    "loki",
    "ops"
  ],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "host",
        "label": "host",
        "datasource": "Loki",
        "refresh": 1,
        "query": "label_values(host)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": "All",
          "value": ".*"
        }
      },
      {
        "type": "query",
        "name": "job",
        "label": "job",
        "datasource": "Loki",
        "refresh": 1,
        "query": "label_values(job)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": "All",
          "value": ".*"
        }
      },
      {
        "type": "textbox",
        "name": "search",
        "label": "contains",
        "hide": 0,
        "current": {
          "text": "",
          "value": ""
        }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "ERROR count (15m)",
      "datasource": "Loki",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({host=~\"$host\", job=~\"$job\"} |~ \"(?i)error\" [15m]))"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "WARN count (15m)",
      "datasource": "Loki",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({host=~\"$host\", job=~\"$job\"} |~ \"(?i)warn\" [15m]))"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Log volume by host (5m)",
      "datasource": "Loki",
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (host) (count_over_time({host=~\"$host\", job=~\"$job\"} [5m]))"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "type": "logs",
      "title": "Live Logs (host/job/level/search filter)",
      "datasource": "Loki",
      "gridPos": {
        "h": 14,
        "w": 24,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{host=~\"$host\", job=~\"$job\"} |~ \"(?i)$search\""
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "sortOrder": "Descending"
      }
    },
    {
      "type": "timeseries",
      "title": "ERROR trend (1h)",
      "datasource": "Loki",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({host=~\"$host\", job=~\"$job\"} |~ \"(?i)error\" [5m]))"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    }
  ]
}