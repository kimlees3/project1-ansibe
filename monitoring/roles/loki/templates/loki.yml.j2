auth_enabled: false

server:
  http_listen_address: {{ loki_listen_address }}
  http_listen_port: {{ loki_http_port }}

common:
  path_prefix: {{ loki_data_dir }}
  replication_factor: {{ loki_replication_factor }}
  ring:
    kvstore:
      store: inmemory

storage_config:
  filesystem:
    directory: {{ loki_data_dir }}/chunks

schema_config:
  configs:
    - from: 2024-01-01
      store: tsdb
      object_store: filesystem
      schema: v13
      index:
        prefix: loki_index_
        period: 24h

ingester:
  wal:
    enabled: true
    dir: {{ loki_data_dir }}/wal

limits_config:
  retention_period: {{ loki_retention_period }}
  ingestion_rate_mb: 16
  ingestion_burst_size_mb: 32
compactor:
  working_directory: {{ loki_data_dir }}/compactor
  retention_enabled: true
  delete_request_store: filesystem

ruler:
  storage:
    type: local
    local:
      directory: {{ loki_data_dir }}/rules
