[Unit]
Description=Loki Log Aggregation System
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User={{ loki_user }}
Group={{ loki_group }}
ExecStart={{ loki_bin_dir }}/loki -config.file={{ loki_conf_dir }}/loki.yml
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
