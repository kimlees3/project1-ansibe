server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: {{ promtail_data_dir }}/positions.yaml

clients:
  - url: "{{ loki_push_url }}"

scrape_configs:
  - job_name: "{{ promtail_job_label }}"
    static_configs:
{% for p in promtail_log_paths %}
      - targets: [localhost]
        labels:
          job: "{{ promtail_job_label }}"
          host: "{{ inventory_hostname }}"
          __path__: "{{ p }}"
{% endfor %}
